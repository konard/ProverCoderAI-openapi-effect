{
	"extends": "../../tsconfig.base.json",
	"compilerOptions": {
		"rootDir": ".",
		"outDir": "dist",
		"declaration": true,
		"declarationMap": true,
		"types": ["vitest", "node"],
		"lib": ["ES2022", "DOM"],
		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"include": [
		"src/**/*",
		"tests/**/*",
		"scripts/**/*"
	],
	"exclude": ["dist", "node_modules"]
}
